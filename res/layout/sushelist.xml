<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sszhang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/ssnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sszhang"
        android:text="宿舍号：" />

    <TextView
        android:id="@+id/sssnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ssnumber"
        android:layout_alignBottom="@+id/ssnumber"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/sszhang"
        android:text="TextView" />

</RelativeLayout>
