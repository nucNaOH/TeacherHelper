<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rightBehindMenuScroll" >

    <LinearLayout
        style="@style/behindMenuScrollContent"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:paddingTop="50dp" >

        <TextView
            android:paddingTop="60dp"
            android:id="@+id/schoolweb"
            style="@style/behindMenuItemLabel"
            android:clickable="true"
            android:onClick="course"
            android:text="学校网站"
            android:textColor="#000000"
            android:textSize="30dip" />

        <TextView
            android:layout_marginTop="10dip"
            android:text="家庭信息" 
            android:textColor="#000000"
            android:id="@+id/familyinfo"
            android:clickable="true"
            android:onClick="baidu"
            android:textSize="30dip"
            style="@style/behindMenuItemLabel"
            />
        <TextView
             android:layout_marginTop="10dip"
            android:text="宿舍信息" 
            android:textColor="#000000"
            android:id="@+id/dormitory"
            android:clickable="true"
            android:onClick="daiban"
            android:textSize="30dip"
            style="@style/behindMenuItemLabel"
            />
        <TextView
             android:layout_marginTop="10dip"
            android:text="请假记录" 
            android:textColor="#000000"
            android:id="@+id/leave"
            android:clickable="true"
            android:textSize="30dip"
            style="@style/behindMenuItemLabel"
            />
        <TextView
             android:layout_marginTop="10dip"
            android:text="班费管理" 
            android:textColor="#000000"
            android:id="@+id/expense"
            android:clickable="true"
            android:onClick="expense"
            android:textSize="30dip"
            style="@style/behindMenuItemLabel"
            />
         <TextView
             android:layout_marginTop="10dip"
            android:text="Excel导入" 
            android:textColor="#000000"
            android:id="@+id/importexcel"
            android:clickable="true"
           
            android:textSize="30dip"
            style="@style/behindMenuItemLabel"
            />
    </LinearLayout>
</LinearLayout>