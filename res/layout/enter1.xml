<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/t2" />
 <TextView
        android:id="@+id/tx"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true"
        android:text="班主任助手"
        android:textColor="#000000"
        android:textSize="50dip" />
 <TextView
        android:id="@+id/textView1"
        android:textSize="20dip"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="用户名" />

 <EditText
     android:id="@+id/yhm"
    
     android:singleLine="true"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:layout_toRightOf="@+id/textView1"
     android:ems="10" />

 <TextView
     android:textSize="20dip"
        android:textColor="#000000"
     android:id="@+id/textView2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/textView1"
     android:layout_below="@+id/yhm"
    
     android:text="密码" />

 <EditText
     android:id="@+id/passw"
    
     android:singleLine="true"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBaseline="@+id/textView2"
     android:layout_alignBottom="@+id/textView2"
     android:layout_alignLeft="@+id/yhm"
     android:ems="10" >

     <requestFocus />
 </EditText>

<Button
    android:id="@+id/dl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginBottom="16dp"
    android:onClick="enter"
    android:text="登录"
    android:textSize="24dip"
    android:textStyle="bold"
    android:width="160dip" />
<Button
     android:id="@+id/zcbutton"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBaseline="@+id/dl"
     android:layout_alignBottom="@+id/dl"
     android:layout_alignParentRight="true"
     android:onClick="zhuce"
     android:text="注册"
     android:textSize="24dip"
     android:textStyle="bold"
     android:width="160dip" />
 
</RelativeLayout>
